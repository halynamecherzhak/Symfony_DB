{% extends 'base.html.twig' %}
{% block title %}SymphArt Articles{% endblock %}

{% block body %}

    <nav class=" navbar-expand-sm navbar-dark bg-primary">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/article/new" class="nav-link">New Article</a>
            </li>
            <li class="nav-item">
                <a href="/article/sort" class="nav-link">Sort Article by Title</a>
            </li>
        </ul>
    </nav>

    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                        <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                        <a href="/article/delete/{{article.id}}" class="btn btn-danger delete-article" >Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
{% endblock %}
